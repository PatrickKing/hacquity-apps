table style="width: 90%;" cellspacing='0'
  tbody

    = render 'mail_shared/appbar'
    = render 'mail_shared/title', title: "Password Change Request"
    = render 'mail_shared/body', body: "Hello #{@resource.name}, someone has requested a link to change your password. You can do this through the link below."

    tr
      td style=td_style
      td
        = render 'mail_shared/link_button', href: edit_password_url(@resource, reset_password_token: @token), link_text: "Change my password"

      td style=td_style

    = render 'mail_shared/body', body: "If you didn't request this, please ignore this email."
    = render 'mail_shared/body', body: "Your password won't change until you access the link above and create a new one."

    = render 'mail_shared/footer', user: @resource, offer_unsubscribe: 'no'


